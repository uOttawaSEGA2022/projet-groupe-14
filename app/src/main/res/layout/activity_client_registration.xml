<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientRegistration"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="527dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8">

        <TextView
            android:id="@+id/nameTextClient"
            style="@style/basictext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Name:"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/NameEditClient"
            android:layout_width="match_parent"
            android:hint="  Name"
            android:textColorHint="@color/grey_font"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/edittext_design"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/NicknameTextClient"
            style="@style/basictext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Nickname:"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/NicknameEditClient"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:hint="  What should everyone call you"
            android:textColorHint="@color/grey_font"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/edittext_design"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/EmailTextClient"
            style="@style/basictext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Email:"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/EmailEditClient"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:hint="  something@mail.com"
            android:textColorHint="@color/grey_font"
            android:textColor="@color/black"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/edittext_design"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/PasswordTextClient"
            style="@style/basictext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Password:"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/PasswordEditClient"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="  Passeword "
            android:textColorHint="@color/grey_font"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/edittext_design"
            android:inputType="textPassword" />


        <TextView
            android:id="@+id/AdressTextClient"
            style="@style/basictext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Address:"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/AdressEditClient"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="@color/black"
            android:hint="  Address"
            android:textColorHint="@color/grey_font"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/edittext_design"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/CardNumber"
            style="@style/basictext"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:text="Card Number:"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/CardNumberEdit"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey_font"
            android:layout_gravity="center"
            android:hint="  ........"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/edittext_design"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="419dp"
            android:layout_height="31dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ExpirationDate"
                style="@style/basictext"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="Expiration Date:"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/CVV"
                style="@style/basictext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CVV:"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/DateExp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginHorizontal="20dp"
                android:hint="  02/45"
                android:textColorHint="@color/grey_font"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:background="@drawable/edittext_design"
                android:inputType="date" />

            <EditText
                android:id="@+id/CVVnum"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="25dp"
                android:hint="  CVV"
                android:textColorHint="@color/grey_font"
                android:layout_weight="1"
                android:background="@drawable/edittext_design"
                android:inputType="number" />
        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signup"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/custom_button"
            android:backgroundTint="@color/black"
            android:onClick="registerclick"
            android:text="Register"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/errormsg"
            style="@style/basictext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ff1930" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:srcCompat="@drawable/dude_eating" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Aboard!"
        android:textColor="@color/black"
        android:fontFamily="@font/poppinssemibold"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>