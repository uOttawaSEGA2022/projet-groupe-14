<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationPage"
    android:background="#7361ff">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:background="#031636"
        android:orientation="vertical"
        android:paddingTop="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/nameTextClient"
            style="@style/basictext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="first name:" />

        <EditText
            android:id="@+id/NameEditClient"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/edittext_design"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/NicknameTextClient"
            style="@style/basictext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last name:" />

        <EditText
            android:id="@+id/NicknameEditClient"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/edittext_design"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/EmailTextClient"
            style="@style/basictext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email:" />

        <EditText
            android:id="@+id/EmailEditClient"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/edittext_design"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/PasswordTextClient"
            style="@style/basictext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password" />

        <EditText
            android:id="@+id/PasswordEditClient"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/edittext_design"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/AdressTextClient"
            style="@style/basictext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adress" />

        <EditText
            android:id="@+id/AdressEditClient"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/edittext_design"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/CardNumber"
            style="@style/basictext"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Card Number" />

        <EditText
            android:id="@+id/CardNumberEdit"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/edittext_design"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="419dp"
            android:layout_height="31dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ExpirationDate"
                style="@style/basictext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Expiration Date" />

            <TextView
                android:id="@+id/CVV"
                style="@style/basictext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CVV" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/DateExp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_design"
                android:inputType="date" />

            <EditText
                android:id="@+id/CVVnum"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginHorizontal="25dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_design"
                android:inputType="number" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>