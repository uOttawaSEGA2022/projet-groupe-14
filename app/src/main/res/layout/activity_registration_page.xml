<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationPage"
    android:background="#031636">

    <TextView
        android:id="@+id/CvvText"
        android:layout_width="104dp"
        android:layout_height="28dp"
        android:text="Register as:"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="335dp" />

    <Button
        android:id="@+id/button_client"
        android:layout_width="116dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:backgroundTint="#5AAAE7"
        android:onClick="registerAsClient"
        android:text="Client"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_chef"

        />


    <Button
        android:id="@+id/button_chef"
        android:layout_width="116dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:backgroundTint="#5aabe8"
        android:onClick="registerAsChef"
        android:text="Chef"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CvvText" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="280dp"
        android:layout_height="267dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/Mealer" />

</androidx.constraintlayout.widget.ConstraintLayout>